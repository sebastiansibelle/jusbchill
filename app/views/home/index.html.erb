<section class="introduction row">
  <div class="col-md-6 col-md-offset-3">
    <p class="lead">"jus b chill" is an online-based, artist-run music label</p>
  </div>
</section>

<section class="soundcloud row">
  <div class="col-md-12">
    <%= render 'musicplayer' %>
  </div>
</section>

<% unless @releases.blank? %>
  <section class="releases row">
    <div class="col-md-12">
      <h2>Releases</h2>
      <%= render 'releases/list' %>
    </div>
  </section>
<% end %>

<% unless @mixes.blank? %>
  <section class="mixes row">
    <div class="col-md-12">
      <h2>Mixes</h2>
      <%= render 'mixes/list' %>
    </div>
  </section>
<% end %>
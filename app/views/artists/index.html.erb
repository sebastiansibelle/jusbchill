<div class="cards">
  <div class="container">
    <h2>Artists</h2>

    <section class=" row">
      <% @artists.each do |artist| %>
        <div class="card col-sm-6 col-md-4">
          <div class="card-image">
            <%= link_to(artist_path(artist), {}) do %>
              <%= image_tag(artist.avatar.url) %>
            <% end %>
          </div>
          <div class="card-details">
            <%= link_to(artist_path(artist), {}) do %>
              <h4><%= artist.name %></h4>
            <% end %>
          </div>
        </div>
      <% end %>
    </section>
  </div>
</div>
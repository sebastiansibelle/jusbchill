<h2>Artists</h2>

<section class="cards row">
  <% @artists.each do |artist| %>
    <div class="card col-md-3">
      <div class="card-image">
        <%= link_to(artist_path(artist), {}) do %>
          <%= image_tag(artist.avatar.url) %>
        <% end %>
      </div>
      <div class="card-details">
        <h3><%= artist.name %></h3>
      </div>
    </div>
  <% end %>
</section>
<section class="artists row">
  <% @artists.each do |artist| %>
    <div class="artist col-md-4">
      <div class="artist-image">
        <%= link_to(artist_path(artist), {}) do %>
          <%= image_tag(artist.avatar.url) %>
        <% end %>
      </div>
      <div class="artist-details">
        <h3><%= artist.name %></h3>
      </div>
    </div>
  <% end %>
</section>
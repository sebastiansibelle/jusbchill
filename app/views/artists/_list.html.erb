<section class="artists row">
  <% @artists.each do |artist| %>
    <div class="artist col-md-12">
      <div class="artist-image col-md-3">
        <%= link_to(artist_path(artist), {}) do %>
          <%= image_tag(artist.avatar.url) %>
        <% end %>
      </div>
      <div class="artist-details col-md-9">
        <h2><%= artist.name %></h2>
        <blockquote class="hidden-xs">
          <%= artist.biography %>
        </blockquote>
      </div>
    </div>
  <% end %>
</section>
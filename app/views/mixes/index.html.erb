<h2>Mixes</h2>

<section class="mix row">
  <% @mixes.each do |mix| %>
    <div class="mix col-md-3">
      <div class="mix-image">
        <%= link_to(mix_path(mix), {}) do %>
          <%= image_tag(mix.avatar.jumbo.url) %>
        <% end %>
      </div>
      <div class="mix-details">
        <h4><%= mix.mix_no %></h4>
        <h4><%= mix.title %> - <%= link_to(mix.artist.name, artist_path(mix.artist)) %></h4>
      </div>
    </div>
  <% end %>
</section>

<section class="soundcloud row">
  <div class="col-md-12">
    <iframe width="100%" height="450" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/playlists/50254409%3Fsecret_token%3Ds-3jbbX&amp;auto_play=false&amp;hide_related=false&amp;show_comments=true&amp;show_user=true&amp;show_reposts=false&amp;visual=false"></iframe>
  </div>
</section>
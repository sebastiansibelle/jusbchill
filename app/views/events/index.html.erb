    <section class="row">
      <div class="col-md-12">
        <div class="logo pulse">
          <%= image_tag('coolroom/cool-room-final.png') %>
        </div>
      </div>
    </section>
  </div>
</div>


<div class="events-light">
  <div class="container">
    <section class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="event-listing">
          <ul class="list-unstyled">
            <li>

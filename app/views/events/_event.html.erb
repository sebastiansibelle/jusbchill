<div class="col-sm-4">
<%= link_to(event.url, {}) do %>
  <div class="event-card">
      <div class="card-image">
        <%= image_tag(event.opengraph_image) %>
      </div>
      <div class="card-details event-card-details">
        <h4><%= event.title %></h4>

        <% if event.completed? %>
          <h5><%= event.start_date.in_time_zone.to_formatted_s(:nicedatefull) %></h5>
        <% else %>
          <h5><%= event.start_date.in_time_zone.to_formatted_s(:nicedate) %></h5>
        <% end %>

        <h5><%= event.location %></h5>
        <p>
          <em>Featuring <%= event.artists.featured.pluck(:name).to_sentence %>.</em>
        </p>
      </div>
  </div>
<% end %>
</div>
<div class="card col-sm-3">
  <div class="card-image">
    <%= link_to(release_path(release), {}) do %>
      <%= image_tag(release.avatar.jumbo.url) %>
    <% end %>
  </div>
  <div class="card-details">
    <h5><%= release.release_no %></h5>
    <h5><%= release.title %> - <%= link_to(release.artist.name, artist_path(release.artist)) %></h5>
  </div>
</div>
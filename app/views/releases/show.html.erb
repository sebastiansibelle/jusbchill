<section class="release">
  <div class="row">
    <div class="release-image col-md-4">
      <%= image_tag(@release.avatar.url) %>
    </div>
    <div class="release-details col-md-4">
      <h2><%= @release.release_no %></h2>
      <h3><%= @release.title %> - <%= link_to(@release.artist.name, artists_path(@release.artist)) %></h3>
      <h4>Release Date: 20/04/2014</h4>
      <a href="#" class="btn btn-lg btn-primary">Buy lossless</a>
      <a href="#" class="btn btn-lg btn-primary">Download mp3</a>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <blockquote>
        <%= @release.description %>
      </blockquote>
    </div>
        <div class="col-md-8">
      <iframe width="100%" height="450" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/152497496&amp;auto_play=false&amp;hide_related=false&amp;show_comments=true&amp;show_user=true&amp;show_reposts=false&amp;visual=true"></iframe>
    </div>
  </div>
</section>

